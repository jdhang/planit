<!DOCTYPE html>
<html>
  <head>
    <title>Planit</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>

  <body>
    <header>
      <%= render "layouts/navbar" %>
    </header>
    <div class="main container">
      <div class="message">
        <%= render "layouts/message" %>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
